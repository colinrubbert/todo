<div class="jumbotron td-auth">
  <h1>ToDo</h1>
  <p>Get your todo on!</p>
  <% if user_signed_in? %>
  <%= link_to "Current ToDos", todo_lists_path, class: "btn btn-info btn-lg" %>
  <%= link_to "New ToDo", new_todo_list_path, class: "btn btn-warning btn-lg" %>
  <% else %>
    <div class="well center">
      <h3>Let's get you authenticated.</h3>
      <%= link_to "Log In", new_user_session_path, class: "btn btn-info btn-lg" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-warning btn-lg" %>
    </div>
  <% end %>
</div>